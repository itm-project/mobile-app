<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".register">


    <TextView
        android:id="@+id/regis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Register New Account"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/userregis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <EditText
        android:id="@+id/enterusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Username"
        app:layout_constraintBottom_toTopOf="@id/enterpassword" />

    <TextView
        android:id="@+id/userregis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:text="Username"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/passregis"
        app:layout_constraintEnd_toStartOf="@+id/enterusername" />


    <EditText
        android:id="@+id/enterpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@id/confpassword" />

    <TextView
        android:id="@+id/passregis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:text="Password"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/confpassregis"
        app:layout_constraintEnd_toStartOf="@+id/enterpassword" />


    <EditText
        android:id="@+id/confpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@id/enteremail" />

    <TextView
        android:id="@+id/confpassregis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:text=" Confirm\nPassword"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/emailregis"
        app:layout_constraintEnd_toStartOf="@+id/confpassword" />

    <EditText
        android:id="@+id/enteremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:hint="E-mail"
        app:layout_constraintBottom_toTopOf="@id/ad1" />

    <TextView
        android:id="@+id/emailregis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="45dp"
        android:text="E-mail"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/addresssregis"
        app:layout_constraintEnd_toStartOf="@+id/enteremail" />


    <EditText
        android:id="@+id/adnum"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="210dp"
        android:hint="num"
        app:layout_constraintBottom_toTopOf="@id/btnRegis"
        app:layout_constraintStart_toEndOf="@id/addresssregis" />

    <EditText
        android:id="@+id/ad1"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="210dp"
        android:hint="Moo"
        app:layout_constraintBottom_toTopOf="@id/btnRegis"
        app:layout_constraintStart_toEndOf="@id/adnum" />

    <EditText
        android:id="@+id/ad2"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="210dp"
        android:hint="Soi"
        app:layout_constraintBottom_toTopOf="@id/btnRegis"
        app:layout_constraintStart_toEndOf="@id/ad1" />

    <EditText
        android:id="@+id/ad3"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="210dp"
        android:hint="Road"
        app:layout_constraintBottom_toTopOf="@id/btnRegis"
        app:layout_constraintStart_toEndOf="@id/ad2" />

    <TextView
        android:id="@+id/addresssregis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="365dp"
        android:text="Address"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center"
        android:padding="20dp"

        app:layout_constraintEnd_toStartOf="@id/spinner2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adnum" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinner1"
        app:layout_constraintTop_toBottomOf="@+id/ad2" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner1"
        app:layout_constraintEnd_toStartOf="@+id/ad4"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/ad4"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="Zip"
        app:layout_constraintStart_toEndOf="@id/spinner3"
        app:layout_constraintTop_toBottomOf="@id/spinner2"
        app:layout_constraintEnd_toEndOf="parent"/>

    <CheckBox
        android:id="@+id/cbTerms"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="170dp"
        android:text="I accept the terms of use"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addresssregis" />

    <Button
        android:id="@+id/btnRegis"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Register Now"
        app:layout_constraintBottom_toTopOf="@id/toLog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/toLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="177dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="60dp"
        android:text="I'm already a member"
        android:textColor="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>